@inject IViewLocalizer Localizer

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BeeSoft.Web</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BeeSoft.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <div class="navbar-brand"><img width="60" src="/images/logoBee.png">BeeSoft</div>
                @if (this.User.IsInRole(AdministratorRoleName))
                {
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item pt-lg-1">
                                <a class="nav-link" asp-area="" asp-controller="Apiaries" asp-action="Index">@Localizer["Apiaries"]</a>
                            </li>
                            <li class="nav-item pt-lg-1">
                                <a class="nav-link" asp-area="" asp-controller="Hives" asp-action="Index">@Localizer["Hives"]</a>
                            </li>
                            <li class="nav-item pt-lg-1">
                                <a class="nav-link" asp-area="" asp-controller="BeeQueens" asp-action="Index">@Localizer["BeeQueens"]</a>
                            </li>
                            <li class="nav-item pt-lg-1">
                                <a class="nav-link" asp-area="" asp-controller="Diseases" asp-action="Index">@Localizer["Diseases"]</a>
                            </li>
                            <li class="nav-item pt-lg-1">
                                <a class="nav-link" asp-area="" asp-controller="Harvests" asp-action="Index">@Localizer["Harvests"]</a>
                            </li>
                            <li class="nav-item pt-lg-1">
                                <a class="nav-link" asp-area="" asp-controller="Inspections" asp-action="Index">@Localizer["Inspections"]</a>
                            </li>
                            <li class="nav-item pt-lg-1">
                                <a class="nav-link" asp-area="" asp-controller="Expenses" asp-action="Index">@Localizer["Expenses"]</a>
                            </li>

                        </ul>
                        <partial name="_LoginPartial" />
                        <div class="form-check form-switch">
                            @{
                                string? culture;
                                Context.Request.Cookies.TryGetValue(".AspNetCore.Culture", out culture);

                                if (culture is not null && culture.Contains("bg-BG"))
                                {
                                    <input class="form-check-input" type="checkbox" id="flexCultureSwitch" checked onclick="changeCulture()">
                                    <label class="form-check-label" for="flexCultureSwitch">BG</label>
                                }
                                else
                                {
                                    <input class="form-check-input" type="checkbox" id="flexCultureSwitch" onclick="changeCulture()">
                                    <label class="form-check-label" for="flexCultureSwitch">BG</label>
                                }
                            }
                        </div>
                    </div>
                }
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - BeeSoft.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

