@model ListAllViewModel<ApiaryServiceModel>
@inject IViewLocalizer Localizer

@{
    ViewBag.Title = @Localizer["ApiariesList"];
}

<br />
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">@ViewBag.Title</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="CreateApiary" class="btn btn-outline-primary"><i class="bi bi-plus-lg"></i> @Localizer["CreateNewApiary"]</a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Localizer["Name"]
                </th>
                <th>
                    @Localizer["Location"]
                </th>
                <th>
                    @Localizer["Hives"]
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var apiary in Model.Items)
            {
                <tr>
                    <td>
                        @apiary.Name
                    </td>
                    <td>
                        @apiary.Location
                    </td>
                    <td>
                        <a class="nav-link" asp-area="" asp-controller="Apiaries" asp-action="ApiaryHives" asp-route-apiaryId="@apiary.Id">@apiary.Hives.Count</a>
                    </td>
                    <td style="text-align:right">
                        <a asp-action="UpdateApiary" class="btn btn-success" asp-route-apiaryId="@apiary.Id"><i class="bi bi-pencil-square"></i></a>
                        <button type="button" class="btn btn-danger" id="deleteBtn" onclick="showDeleteModal(@apiary.Id)"><i class="bi bi-trash-fill"></i></button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<partial name="_PagingPartial" model="@this.Model" />
<partial name="_DeleteModalPartial" />