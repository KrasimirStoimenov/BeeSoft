@model ApiaryHivesViewModel
@inject IViewLocalizer Localizer

@{
    ViewBag.Title = @Localizer["HivesInApiary"];
}

<br />
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">@ViewBag.Title: @Model.ApiaryName</h1>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr style="text-align:center">
                <th>
                    @Localizer["Number"]
                </th>
                <th>
                    @Localizer["Type"]
                </th>
                <th>
                    @Localizer["Status"]
                </th>
                <th>
                    @Localizer["Color"]
                </th>
                <th>
                    @Localizer["BoughtDate"]
                </th>
                <th>
                    @Localizer["TimesUsed"]
                </th>
                <th>
                    @Localizer["Queens"]
                </th>
                <th>
                    @Localizer["Inspections"]
                </th>
                <th>
                    @Localizer["Diseases"]
                </th>
                <th>
                    @Localizer["Harvests"]
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var hive in Model.Hives)
            {
                <tr style="text-align:center">
                    <td>
                        @hive.Number
                    </td>
                    <td>
                        @hive.Type
                    </td>
                    <td>
                        @hive.Status
                    </td>
                    <td>
                        @hive.Color
                    </td>
                    <td>
                        @hive.DateBought
                    </td>
                    <td>
                        @hive.TimesUsedCount
                    </td>
                    <td>
                        <a class="nav-link" asp-controller="Hives" asp-action="HiveBeeQueens" asp-route-hiveId="@hive.Id">@hive.BeeQueens.Count</a>
                    </td>
                    <td>
                        <a class="nav-link" asp-controller="Hives" asp-action="HiveInspections" asp-route-hiveId="@hive.Id">@hive.Inspections.Count</a>
                    </td>
                    <td>
                        <a class="nav-link" asp-controller="Hives" asp-action="HiveDiseases" asp-route-hiveId="@hive.Id">@hive.Diseases.Count</a>
                    </td>
                    <td>
                        <a class="nav-link" asp-controller="Hives" asp-action="HiveHarvests" asp-route-hiveId="@hive.Id">@hive.Harvests.Count</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        <partial name="~/Views/Shared/ButtonsPartials/_BackButtonPartial.cshtml" />
    </div>
</div>