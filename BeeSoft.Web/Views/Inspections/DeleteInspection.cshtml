@model BaseInspectionServiceModel
@inject IViewLocalizer Localizer

@{
    ViewBag.Title = @Localizer["DeleteInspection"];
}

<form asp-action="DeleteInspection">
    <input asp-for="Id" hidden />
    <input asp-for="HiveId" hidden />

    <br />
    <div class="container border p-3">
        <h1 class="text-primary">@ViewBag.Title</h1>

        <hr />
        <div class="row">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="InspectionDate" class="control-label pt-1" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="InspectionDate" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="WeatherConditions" class="control-label pt-1" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="WeatherConditions" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="Observations" class="control-label pt-1" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Observations" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="ActionsTaken" class="control-label pt-1" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ActionsTaken" disabled class="form-control" />
            </div>
            <div class="col-5 offset-2">
                <partial name="~/Views/Shared/ButtonsPartials/_BackButtonPartial.cshtml" />
            </div>
            <div class="col-5">
                <partial name="~/Views/Shared/ButtonsPartials/_DeleteButtonPartial.cshtml" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}