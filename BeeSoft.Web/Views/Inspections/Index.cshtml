@model ListAllViewModel<InspectionListingServiceModel>

<br />
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Inspections List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="CreateInspection" class="btn btn-outline-primary"><i class="bi bi-plus-lg"></i> Create New Inspection</a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Inspection Date
                </th>
                <th>
                    Weather Conditions
                </th>
                <th>
                    Observations
                </th>
                <th>
                    Actions Taken
                </th>
                <th>
                    Hive Number
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var inspection in Model.Items)
            {
                <tr>
                    <td>
                        @inspection.InspectionDate
                    </td>
                    <td>
                        @inspection.WeatherConditions
                    </td>
                    <td>
                        @inspection.Observations
                    </td>
                    <td>
                        @inspection.ActionsTaken
                    </td>
                    <td>
                        <a class="nav-link" asp-area="" asp-controller="Hives" asp-action="HiveInspections" asp-route-hiveId="@inspection.HiveId">№@inspection.HiveNumber</a>
                    </td>
                    <td style="text-align:right">
                        <a asp-action="UpdateInspection" class="btn btn-success" asp-route-inspectionId="@inspection.Id"><i class="bi bi-pencil-square"></i></a>
                        <a asp-action="DeleteInspection" class="btn btn-danger" asp-route-inspectionId="@inspection.Id"><i class="bi bi-trash-fill"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<partial name="_PagingPartial" model="@this.Model" />