@model CreateInspectionFormModel
@inject IViewLocalizer Localizer

@{
    ViewBag.Title = @Localizer["CreateInspection"];
}

<form asp-action="Create">
    <input asp-for="HiveId" hidden />
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">@ViewBag.Title</h1>

        <hr />
        <div class="row">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="InspectionDate" class="control-label pt-1" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="InspectionDate" type="datetime-local" class="form-control" />
                <span asp-validation-for="InspectionDate" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="WeatherConditions" class="control-label pt-1" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="WeatherConditions" class="form-control" />
                <span asp-validation-for="WeatherConditions" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Observations" class="control-label pt-1" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Observations" class="form-control" />
                <span asp-validation-for="Observations" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="ActionsTaken" class="control-label pt-1" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ActionsTaken" class="form-control" />
                <span asp-validation-for="ActionsTaken" class="text-danger"></span>
            </div>
            <div class="col-5 offset-2">
                <partial name="~/Views/Shared/ButtonsPartials/_BackButtonPartial.cshtml" />
            </div>
            <div class="col-5">
                <partial name="~/Views/Shared/ButtonsPartials/_CreateButtonPartial.cshtml" />
            </div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}