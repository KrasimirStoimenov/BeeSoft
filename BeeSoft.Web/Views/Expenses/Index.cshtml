@model ExpenseViewModel
@inject IViewLocalizer Localizer

@{
    ViewBag.Title = @Localizer["ExpensesList"];
}

<br />
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">@ViewBag.Title</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="CreateExpense" class="btn btn-outline-primary"><i class="bi bi-plus-lg"></i> @Localizer["CreateNewExpense"]</a>
        </div>
        <div>
            <h2 class="text-center">@Localizer["TotalExpenseAmount"]: @Model.TotalAmount @Localizer["Lv"]</h2>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Localizer["Date"]
                </th>
                <th>
                    @Localizer["Name"]
                </th>
                <th>
                    @Localizer["Price"]
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var expense in Model.Expenses)
            {
                <tr>
                    <td>
                        @expense.Date
                    </td>
                    <td>
                        @expense.Name
                    </td>
                    <td>
                        @expense.Price
                    </td>
                    <td style="text-align:right">
                        <a asp-action="UpdateExpense" class="btn btn-success" asp-route-expenseId="@expense.Id"><i class="bi bi-pencil-square"></i></a>
                        <button type="button" class="btn btn-danger" id="deleteBtn" onclick="showDeleteModal(@expense.Id)"><i class="bi bi-trash-fill"></i></button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<partial name="_PagingPartial" model="@this.Model" />
<partial name="_DeleteModalPartial" />