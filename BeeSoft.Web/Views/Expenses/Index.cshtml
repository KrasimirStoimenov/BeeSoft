@model IEnumerable<ExpenseServiceModel>

<br />
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Expenses List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="CreateExpense" class="btn btn-outline-primary"><i class="bi bi-plus-lg"></i> Create New Expense</a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Price
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var expense in Model)
            {
                <tr>
                    <td>
                        @expense.Name
                    </td>
                    <td>
                        @expense.Price
                    </td>
                    <td>
                        <a asp-action="UpdateExpense" class="btn btn-success" asp-route-expenseId="@expense.Id"><i class="bi bi-pencil-square"></i></a>
                        <a asp-action="DeleteExpense" class="btn btn-danger" asp-route-expenseId="@expense.Id"><i class="bi bi-trash-fill"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>