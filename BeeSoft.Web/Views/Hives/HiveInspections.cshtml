@model HiveResourcesViewModel<InspectionListingServiceModel>
@inject IViewLocalizer Localizer

@{
    ViewBag.Title = @Localizer["InspectionsForHive"];
    var hiveId = this.Context.Request.Query.FirstOrDefault(x => x.Key == "hiveId").Value;
}

<br />
<br />
<div class="container p-3 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">@ViewBag.Title: №@Model.HiveNumber</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="Inspections" asp-action="CreateInspection" asp-route-hiveId="@hiveId" class="btn btn-outline-primary"><i class="bi bi-plus-lg"></i> @Localizer["CreateNewInspection"]</a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr style="text-align:center">
                <th>
                    @Localizer["InspectionDate"]
                </th>
                <th>
                    @Localizer["WeatherConditions"]
                </th>
                <th>
                    @Localizer["Observations"]
                </th>
                <th>
                    @Localizer["ActionsTaken"]
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var inspection in Model.Resources)
            {
                <tr style="text-align:center">
                    <td>
                        @inspection.InspectionDate
                    </td>
                    <td>
                        @inspection.WeatherConditions
                    </td>
                    <td>
                        @inspection.Observations
                    </td>
                    <td>
                        @inspection.ActionsTaken
                    </td>
                    <td style="text-align:right">
                        <a class="btn btn-success" asp-controller="Inspections" asp-action="UpdateInspection" asp-route-inspectionId="@inspection.Id"><i class="bi bi-pencil-square"></i></a>
                        <a class="btn btn-danger" asp-controller="Inspections" asp-action="DeleteInspection" asp-route-inspectionId="@inspection.Id"><i class="bi bi-trash-fill"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        <partial name="~/Views/Shared/ButtonsPartials/_BackButtonPartial.cshtml" />
    </div>
</div>