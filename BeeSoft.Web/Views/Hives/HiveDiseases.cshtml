@model HiveResourcesViewModel<DiseaseListingServiceModel>
@inject IViewLocalizer Localizer

@{
    ViewBag.Title = @Localizer["DiseasesForHive"];
}

<br />
<br />
<div class="container p-3 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">@ViewBag.Title: №@Model.HiveNumber</h1>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr style="text-align:center">
                <th>
                    @Localizer["Name"]
                </th>
                <th>
                    @Localizer["Description"]
                </th>
                <th>
                    @Localizer["Treatment"]
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var disease in Model.Resources)
            {
                <tr style="text-align:center">
                    <td>
                        @disease.Name
                    </td>
                    <td>
                        @disease.Description
                    </td>
                    <td>
                        @disease.Treatment
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        <partial name="~/Views/Shared/ButtonsPartials/_BackButtonPartial.cshtml" />
    </div>
</div>