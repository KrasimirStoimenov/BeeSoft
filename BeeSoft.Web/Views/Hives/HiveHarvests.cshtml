@model HiveResourcesViewModel<HarvestListingServiceModel>
@inject IViewLocalizer Localizer

@{
    ViewBag.Title = @Localizer["HarvestsForHive"];
}

<br />
<br />
<div class="container p-3 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">@ViewBag.Title: №@Model.HiveNumber</h1>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr style="text-align:center">
                <th>
                    @Localizer["HarvestDate"]
                </th>
                <th>
                    @Localizer["HarvestedAmount"]
                </th>
                <th>
                    @Localizer["HarvestedProduct"]
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var harvest in Model.Resources)
            {
                <tr style="text-align:center">
                    <td>
                        @harvest.HarvestDate
                    </td>
                    <td>
                        @harvest.HarvestedAmount
                    </td>
                    <td>
                        @harvest.HarvestedProduct
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        <partial name="~/Views/Shared/ButtonsPartials/_BackButtonPartial.cshtml" />
    </div>
</div>