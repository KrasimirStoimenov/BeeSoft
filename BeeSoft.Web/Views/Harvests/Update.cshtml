@model UpdateHarvestFormModel
@inject IViewLocalizer Localizer

@{
    ViewBag.Title = @Localizer["UpdateHarvest"];
}

<form asp-action="Update">
    <input asp-for="Id" hidden />
    <input asp-for="HiveId" hidden />
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">@ViewBag.Title</h1>

        <hr />
        <div class="row">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="HarvestDate" class="control-label pt-1" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="HarvestDate" type="datetime" class="form-control" />
                <span asp-validation-for="HarvestDate" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="HarvestedAmount" class="control-label pt-1" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="HarvestedAmount" type="number" class="form-control" />
                <span asp-validation-for="HarvestedAmount" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="HarvestedProduct" class="control-label pt-1" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="HarvestedProduct" class="form-control" />
                <span asp-validation-for="HarvestedProduct" class="text-danger"></span>
            </div>
            <div class="col-5 offset-2">
                <partial name="~/Views/Shared/ButtonsPartials/_BackButtonPartial.cshtml" />
            </div>
            <div class="col-5">
                <partial name="~/Views/Shared/ButtonsPartials/_UpdateButtonPartial.cshtml" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}