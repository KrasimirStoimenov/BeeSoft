@model UpdateExpenseFormModel
@inject IViewLocalizer Localizer

@{
    ViewBag.Title = @Localizer["UpdateExpense"];
}

<form asp-action="Update">
    <input asp-for="Id" hidden />
    <div class="container">
        <fieldset>
            <legend class="text-primary">@ViewBag.Title</legend>
            <div asp-validation-summary="All" class="text-danger"></div>

            <p class="field">
                <input asp-for="Name" class="form-control" required />
                <label asp-for="Name"></label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </p>

            <p class="field">
                <input asp-for="Price" class="form-control" required />
                <label asp-for="Price"></label>
                <span asp-validation-for="Price" class="text-danger"></span>
            </p>

            <p class="field">
                <input asp-for="Date" type="datetime-local" class="form-control" required />
                <label asp-for="Date"></label>
                <span asp-validation-for="Date" class="text-danger"></span>
            </p>

            <div class="row">
                <div class="col-6">
                    <partial name="~/Views/Shared/ButtonsPartials/_BackButtonPartial.cshtml" />
                </div>
                <div class="col-6">
                    <partial name="~/Views/Shared/ButtonsPartials/_UpdateButtonPartial.cshtml" />
                </div>
            </div>
        </fieldset>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@section Styles {
    <link rel="stylesheet" href="~/css/input-form-styles.css" />
}