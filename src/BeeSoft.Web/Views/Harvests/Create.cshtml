@model CreateHarvestFormModel
@inject IViewLocalizer Localizer

@{
    ViewBag.Title = @Localizer["CreateHarvest"];
}

<form asp-action="Create">
    <input asp-for="HiveId" hidden />
    <div class="container">
        <fieldset>
            <legend class="text-primary">@ViewBag.Title</legend>
            <div asp-validation-summary="All" class="text-danger"></div>

            <p class="field">
                <input asp-for="HarvestDate" type="datetime-local" class="form-control" required />
                <label asp-for="HarvestDate"></label>
                <span asp-validation-for="HarvestDate" class="text-danger"></span>
            </p>

            <p class="field">
                <input asp-for="HarvestedAmount" type="number" value="" class="form-control" required />
                <label asp-for="HarvestedAmount"></label>
                <span asp-validation-for="HarvestedAmount" class="text-danger"></span>
            </p>

            <p class="field">
                <input asp-for="HarvestedProduct" class="form-control" required />
                <label asp-for="HarvestedProduct"></label>
                <span asp-validation-for="HarvestedProduct" class="text-danger"></span>
            </p>

            <div class="row">
                <div class="col-6">
                    <partial name="~/Views/Shared/ButtonsPartials/_BackButtonPartial.cshtml" />
                </div>
                <div class="col-6">
                    <partial name="~/Views/Shared/ButtonsPartials/_CreateButtonPartial.cshtml" />
                </div>
            </div>
        </fieldset>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@section Styles {
    <link rel="stylesheet" href="~/css/input-form-styles.css" />
}